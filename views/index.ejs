<script>
$(document).ready(function() {
  $('select').material_select();
});

window.goPlaces = function(){
  var e = document.getElementById("my-designs");
  var strUser = e.options[e.selectedIndex].text;
  switch(strUser){
    case 'Flyer/Poster Design':
    window.location.href = "/flyerposter";
    break;
    case 'Website Design':
    window.location.href = "/website";
    break;
    case 'Social Media Package':
    window.location.href = "/socialmedia";
    break;
    case 'Logo Design':
    window.location.href = "/logo";
    break;
    case 'Brochure Design':
    window.location.href = "/brochure";
    break;
    case 'Apparel':
    window.location.href = "/apparel";
    break;
    case 'Other Design':
    window.location.href = "/other";
    break;
    default:
    alert("Please choose a design from the dropdown list.");
  }
}
</script>

